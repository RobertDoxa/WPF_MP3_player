<mah:MetroWindow x:Class="WpfApp1.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 Title="Xeras MP3 player"
                 Icon="E:\Programming\C#\test\WpfApp1\imgs\x_icon.png"
                 Width="800"
                 Height="450"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Click="LaunchGitHubSite" ToolTip="Open up the GitHub site">
                <iconPacks:PackIconModern Width="22"
                                  Height="22"
                                  Kind="SocialGithubOctocat" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <Grid>
        <Menu HorizontalAlignment = "Center" VerticalAlignment = "Top" Width = "800">

            <MenuItem Header = "_File" Cursor="Arrow">
                <MenuItem Header = "_Open..." HorizontalAlignment = "Left" Width = "140" Click = "OpenFile_Click"/>
                <Separator HorizontalAlignment = "Left" Width = "140" />
                <MenuItem Header = "Exit" HorizontalAlignment = "Left" Width = "140" 
               Click = "MenuItem_Click"/>
            </MenuItem>

            <MenuItem Header = "_Edit" Cursor="Arrow">
                <MenuItem Header = "Item 1" HorizontalAlignment = "Left" Width = "140" 
               Click = "MenuItem_Click1" />
                <MenuItem Header = "Item 2" HorizontalAlignment = "Left" Width = "140" 
               Click = "MenuItem_Click1" />
                <Separator HorizontalAlignment = "Left" Width = "140" />
                <MenuItem Header = "Item 3" HorizontalAlignment = "Left" Width = "140" 
               Click = "MenuItem_Click1" />
            </MenuItem>

            <MenuItem Header = "View" Cursor="Arrow">
                <MenuItem Header = "Item 1" HorizontalAlignment = "Left" Width = "140" 
               Click = "MenuItem_Click2" />
                <MenuItem Header = "Item 2" HorizontalAlignment = "Left" Width = "140" 
               Click = "MenuItem_Click2" />
                <Separator HorizontalAlignment = "Left" Width = "140" />
                <MenuItem Header = "Item 3" HorizontalAlignment = "Left" Width = "140" 
               Click = "MenuItem_Click2"/>
            </MenuItem>

        </Menu>
        <RadioButton Content="Dark mode" Click="DarkModeClick" HorizontalAlignment="Left" Margin="35,86,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton Content="Light mode" Click="LightModeClick" HorizontalAlignment="Left" Margin="35,109,0,0" VerticalAlignment="Top" IsChecked="False"/>
        <Slider HorizontalAlignment="Left" Margin="323,193,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</mah:MetroWindow>